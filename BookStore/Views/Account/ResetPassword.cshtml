@model BookStore.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutPassowrd.cshtml";
    ViewBag.Title = "Reset password";
}







<div class="img">
    <img src="~/Content/img/undraw_authentication_fsn5.svg" />
</div>
<div class="login-content">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Code)


        <img src="~/Content/img/avatar.svg">
        <h2 class="title">Enter new password</h2>
        <div class="input-div one">
            <div class="i">
                <i class="fas fa-user"></i>
            </div>
            <div class="div form-group">
                <h5>Email Confirmation</h5>
                @Html.TextBoxFor(m => m.Email, new { @class = "input form-control" })
            </div>
        </div>
        <div class="input-div one">
            <div class="i">
                <i class="fas fa-lock"></i>
            </div>
            <div class="div">
                <h5>Password</h5>
                @Html.PasswordFor(m => m.Password, new { @class = "input form-control" })
            </div>

        </div>
        <div class="input-div pass">
            <div class="i">
                <i class="fas fa-lock"></i>
            </div>
            <div class="div">
                <h5>Repeat Password</h5>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input form-control" })

            </div>
        </div>
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" class="btn btn-default" value="Reset">
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
